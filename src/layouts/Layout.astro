---
// --- Component Script (JavaScript) ---
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---
<!-- --- Component Template (HTML + Astro Expressions) --- -->
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    
    <!-- Google Fonts: Poppins -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome para iconos sociales -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <style>
        body { font-family: 'Poppins', sans-serif; }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- ========== HEADER ========== -->
    <header class="bg-white/80 backdrop-blur-md fixed top-0 left-0 right-0 z-50 shadow-sm">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div class="text-2xl font-bold text-green-800">
                <a href="/">Agriventures</a>
            </div>

            <!-- Menú de Escritorio -->
            <div class="hidden md:flex items-center space-x-2">
                
                <div class="relative group">
                    <a href="/productos" class="text-gray-600 hover:text-green-700 transition-all duration-300 px-4 py-2 rounded-lg hover:bg-green-50 flex items-center">
                        Productos
                        <svg class="w-4 h-4 ml-1 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </a>
                    
                    <!-- CAMBIO: Se añade un padding superior (pt-2) al contenedor del menú para "puentear" el espacio. -->
                    <div class="absolute left-0 pt-2 w-48 z-50 hidden group-hover:block transition-all duration-300 opacity-0 transform scale-95 group-hover:opacity-100 group-hover:scale-100">
                        <div class="bg-white rounded-md shadow-xl py-1">
                            <a href="/productos#suelos" class="block px-4 py-2 text-sm text-gray-700 hover:bg-green-50 hover:text-green-700">Suelos</a>
                            <a href="/productos#foliares" class="block px-4 py-2 text-sm text-gray-700 hover:bg-green-50 hover:text-green-700">Foliares</a>
                            <a href="/productos#bioestimulantes" class="block px-4 py-2 text-sm text-gray-700 hover:bg-green-50 hover:text-green-700">Bioestimulantes</a>
                            <a href="/productos#especialidades" class="block px-4 py-2 text-sm text-gray-700 hover:bg-green-50 hover:text-green-700">Especialidades</a>
                        </div>
                    </div>
                </div>

                <a href="/#nosotros" class="text-gray-600 hover:text-green-700 transition-all duration-300 px-4 py-2 rounded-lg hover:bg-green-50">Sobre Nosotros</a>
                <a href="/#equipo" class="text-gray-600 hover:text-green-700 transition-all duration-300 px-4 py-2 rounded-lg hover:bg-green-50">Nuestro Equipo</a>
                <a href="/#contacto" class="bg-green-700 text-white px-5 py-2 rounded-full hover:bg-green-800 transition duration-300 shadow ml-6">Contáctanos</a>
            </div>

            <!-- Botón de Menú Móvil (Hamburguesa) -->
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-gray-600 hover:text-green-700 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
            </div>
        </nav>

        <!-- Menú Desplegable Móvil -->
        <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
            <div>
                <button id="mobile-products-trigger" class="w-full flex justify-between items-center px-6 py-3 text-gray-700 hover:bg-green-50 text-left">
                    <span>Productos</span>
                    <svg id="mobile-arrow" class="w-5 h-5 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
                <div id="mobile-products-submenu" class="hidden pl-8 bg-gray-50/50">
                    <a href="/productos#suelos" class="block px-6 py-2 text-sm text-gray-600 hover:bg-green-100">Suelos</a>
                    <a href="/productos#foliares" class="block px-6 py-2 text-sm text-gray-600 hover:bg-green-100">Foliares</a>
                    <a href="/productos#bioestimulantes" class="block px-6 py-2 text-sm text-gray-600 hover:bg-green-100">Bioestimulantes</a>
                    <a href="/productos#especialidades" class="block px-6 py-2 text-sm text-gray-600 hover:bg-green-100">Especialidades</a>
                </div>
            </div>
            <a href="/#nosotros" class="block px-6 py-3 text-gray-700 hover:bg-green-50">Sobre Nosotros</a>
            <a href="/#equipo" class="block px-6 py-3 text-gray-700 hover:bg-green-50">Nuestro Equipo</a>
            <a href="/#contacto" class="block px-6 py-3 text-gray-700 hover:bg-green-50">Contáctanos</a>
        </div>
    </header>

    <slot />

    <div class="fixed bottom-6 right-6 z-50 flex items-center group">
        <div class="bg-white p-3 rounded-lg shadow-lg mr-3 hidden group-hover:block transition-all duration-300">
            <p class="text-sm text-gray-800 font-semibold">¿Necesitas ayuda?</p>
            <p class="text-xs text-gray-600">¡Habla con nosotros!</p>
        </div>
        <a 
            href="https://api.whatsapp.com/send?phone=56954121602" 
            target="_blank" 
            class="bg-green-500 text-white w-16 h-16 rounded-full flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-300"
            aria-label="Contactar por WhatsApp"
        >
            <i class="fab fa-whatsapp fa-2x"></i>
        </a>
    </div>

    <footer class="bg-gray-800 text-white py-10">
        <div class="container mx-auto px-6 text-center">
            <div class="mb-6">
                <h3 class="text-xl font-semibold mb-4">Síguenos</h3>
                <div class="flex justify-center space-x-6">
                    <a href="https://www.instagram.com/agriventures_cl/" target="_blank" class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"><i class="fab fa-instagram fa-2x"></i></a>
                    <a href="https://api.whatsapp.com/send?phone=56954121602" target="_blank" class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"><i class="fab fa-whatsapp fa-2x"></i></a>
                    <a href="https://www.linkedin.com/company/agriventures-cl" target="_blank" class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"><i class="fab fa-linkedin-in fa-2x"></i></a>
                    <a href="https://www.facebook.com/Agriventures.cl" target="_blank" class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"><i class="fab fa-facebook-f fa-2x"></i></a>
                    <a href="https://x.com/agriventures_cl" target="_blank" class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"><i class="fab fa-twitter fa-2x"></i></a>
                </div>
            </div>
            <div class="border-t border-gray-700 pt-6">
                <p>&copy; {new Date().getFullYear()} Agriventures. Todos los derechos reservados.</p>
                <div class="mt-4 flex justify-center items-center space-x-4">
                    <a href="mailto:ventas@agriventures.cl" class="text-gray-400 hover:text-white">ventas@agriventures.cl</a>
                    <span class="text-gray-500">&bull;</span>
                    <a href="tel:+56954121602" class="text-gray-400 hover:text-white">+56 9 5412 1602</a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileProductsTrigger = document.getElementById('mobile-products-trigger');
            const mobileProductsSubmenu = document.getElementById('mobile-products-submenu');
            const mobileArrow = document.getElementById('mobile-arrow');

            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
            }

            if (mobileProductsTrigger && mobileProductsSubmenu && mobileArrow) {
                mobileProductsTrigger.addEventListener('click', () => {
                    mobileProductsSubmenu.classList.toggle('hidden');
                    mobileArrow.classList.toggle('rotate-180');
                });
            }
        });
    </script>
</body>
</html>
